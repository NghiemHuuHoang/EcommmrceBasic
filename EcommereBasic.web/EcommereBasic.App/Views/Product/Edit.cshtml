@model Ecommerce.Entities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form id="btnEdit">
    <input name="ID" value="@Model.ID" type="hidden"/>
    <br />
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br />
    <label>Price</label>
    <input name="Price" value="@Model.Price" />
    <br />
    <label>Description</label>
    <input name="Description" value="@Model.Description" />
    <br />
    <button type="button" class="btnSave">Save</button>
</form>
<script>
    $(".btnSave").click(function () {

        $.ajax({
            type: "POST",
            url: "/Product/Edit",
            data: $("#btnEdit").serialize()
        })
            .done(function (response) {
                $("#containerTable").html(response);
                $("#actionCreate").html("");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("fail");
            });
    });
</script>


